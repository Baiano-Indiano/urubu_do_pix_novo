<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos para Material Components -->
    <style name="Widget.MaterialComponents.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundCard</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.MaterialComponents.SeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:progressBackgroundTint">@color/borderLight</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Tooltip" parent="">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:colorBackground">@color/backgroundLight</item>
        <item name="android:colorForeground">@color/textPrimary</item>
    </style>
</resources>
